<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_small"
    android:layout_width="150dp"
    android:layout_height="220dp"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:contentDescription="@string/nft_card_image_picture_description"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:id="@+id/nft_image_card"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginBottom="4dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nft_card_name_title"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:id="@+id/nft_name_card"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/nft_card_collection_name"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:id="@+id/nft_collection_card"
                />

        </LinearLayout>

